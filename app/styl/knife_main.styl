
		.grid_container_index
			display grid
			grid-gap 8px
			set_size(100%, auto, 0)
			
			a, h3
				text-align center

			.text1
				set_position(1, 4, 1, 2)

			.ref1
				set_position(1, 2, 2, 3)

			.ref2
				set_position(2, 3, 2, 3)

			.ref3
				set_position(3, 4, 2, 3)

			.ref4
				set_position(1, 2, 4, 5)

			.ref5
				set_position(2, 3, 4, 5)

			.ref6
				set_position(3, 4, 4, 5)

			.img1
				set_position(1, 2, 3, 4)

			.img2
				set_position(2, 3, 3, 4)

			.img3
				set_position(3, 4, 3, 4)

			.img4
				set_position(1, 2, 5, 6)

			.img5
				set_position(2, 3, 5, 6)

			.img6
				set_position(3, 4, 5, 6)

	@media (max-width 600px)
		.main
			font-size 12px
			line-height 1.5
			set_size(100%, 0, 20px)
			min-width 0

			nav
				ul
					flex-wrap: wrap

			.grid_container_index

				.text1
					set_position(1, 3, 1, 2)

				.ref1
					set_position(1, 2, 2, 3)

				.ref2
					set_position(2, 3, 2, 3)

				.ref3
					set_position(1, 2, 4, 5)

				.ref4
					set_position(2, 3, 4, 5)

				.ref5
					set_position(1, 2, 6, 7)

				.ref6
					set_position(2, 3, 6, 7)

				.img1
					set_position(1, 2, 3, 4)

				.img2
					set_position(2, 3, 3, 4)

				.img3
					set_position(1, 2, 5, 6)

				.img4
					set_position(2, 3, 5, 6)

				.img5
					set_position(1, 2, 7, 8)

				.img6
					set_position(2, 3, 7, 8)