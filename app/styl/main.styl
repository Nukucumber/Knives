@inport css_font

$body_color = #0A0B0D
$main_block_color = #191A1C	

set_size(tag_width, tag_margin, tag_padding)
	width tag_width
	margin tag_margin
	padding tag_padding

set_position(column_start, column_end, row_start, row_end)
	grid-column column_start/column_end
	grid-row row_start/row_end

body
	background-color $body_color
	font-size 14px
	color #D8D8D8
	::selection
		background gray
		
	.main
		set_size(90%, 20px auto, 20px)
		background-color $main_block_color
		font-size 16px
		min-width 700px
		border grey solid thick
		border-radius 10px

		header
			text-align center
			set_size(auto, 0 0 20px 0, 0)

		a
			color #D8D8D8
			font-weight bold
			text-decoration: none
			set_size(auto, 20px, 0)

			&:hover
				transition all ease .3s 
				color white
				transform scale(1.1)

		img
			border gray solid thin
			border-radius 3px
			set_size(100%, 0, 0)
			height 100%

		nav
			ul
				align-content space-between
				justify-content space-around
				display flex
				flex-wrap nowrap
				list-style-type: none

				li
					transition all ease .3s 

				li:hover
					color white
					transform scale(1.1)

				li.active
					transform scale(1.2)
					a
						color white
			hr
				width 50%

		footer
			display block
			float right
			set_size(auto, 35px 0 0 0, 0)

	@import knife_main
	@import famous_knife
	@import table_knife