
		.grid_container_famous_knife
			display grid
			grid-gap 10px
			set_size(100%, auto, 0)

			.text2
				text-align center
				set_position(1, 3, 1, 2)
				set_size(auto, 10px 0 20px 0, 0)

			.text1
				set_position(2, 3, 2, 3)

			.text3
				set_position(1, 3, 3, 4)
				set_size(auto, auto, 0)
			
			.img1
				set_position(1, 2, 2, 3)

	@media (max-width 600px)
		.main
			font-size 12px
			line-height 1.5
			set_size(100%, 0, 20px)
			min-width 0

			nav
				ul
					flex-wrap: wrap

			.grid_container_famous_knife
				.text2
					text-align center
					set_position(1, 2, 1, 2)
					set_size(auto, 10px 0 20px 0, 0)

				.text1
					set_position(1, 2, 3, 4)

				.text3
					set_position(1, 2, 4, 5)
				
				.img1
					set_position(1, 2, 2, 3)